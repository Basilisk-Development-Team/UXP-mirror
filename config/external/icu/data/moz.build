# Build a library containing the ICU data and fold it into the shared
# ICU library.
Library('icudata')
FINAL_LIBRARY = 'icu'

if CONFIG['OS_ARCH'] == 'WINNT':
    if CONFIG['CPU_ARCH'] == 'x86':
        ASFLAGS += ['-DPREFIX']
elif CONFIG['OS_ARCH'] == 'Darwin':
    ASFLAGS += ['-DPREFIX']

ASFLAGS += [
    '-DICU_DATA_FILE="%s"' % CONFIG['ICU_DATA_FILE'],
    '-DICU_DATA_SYMBOL=icudt%s_dat' % CONFIG['MOZ_ICU_VERSION'],
]
LOCAL_INCLUDES += ['.']

if CONFIG['HAVE_YASM']:
    USE_YASM = True
    SOURCES += ['icudata.s']
elif CONFIG['GNU_AS']:
    SOURCES += ['icudata_gas.S']
